<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advanced TradingView Chart</title>
    <style>
        #tradingview_widget_container {
            padding: 0;
            margin: 0;
            width: 100%;
            height: 100vh;
            overflow: hidden; /* Ngăn chặn mọi cuộn trang */
        }
    </style>
</head>
<body>
    <a asp-controller="Login" asp-action="Singin">Login</a>
      <a asp-controller="Register" asp-action="Register">Register</a>
      <a asp-controller="Courses" asp-action="Course">Register</a>
    <div id="tradingview_widget_container"></div>
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <script type="text/javascript">
        new TradingView.widget({
            "autosize": true,
            "symbol": "NASDAQ:AAPL",
            "interval": "1",
            "timezone": "Etc/UTC",
            "theme": "light",
            "style": "1",
            "locale": "en",
            "toolbar_bg": "#f1f3f6",
            "enable_publishing": false, // Đảm bảo rằng thuộc tính này được đặt là false
            "allow_symbol_change": true,
            "container_id": "tradingview_widget_container",
            "studies": [
                "MASimple@tv-basicstudies",
                "RSI@tv-basicstudies"
            ],
            "save_image": false,
            "hide_top_toolbar": false,
            "hide_side_toolbar": false, // Ẩn thanh công cụ bên
            "withdateranges": false,
            "hide_legend": false
        });



    </script>
    <div>

    </div class = "mau">
</body>
</html>