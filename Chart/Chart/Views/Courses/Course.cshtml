@model IEnumerable<Chart.Models.Course>

@{
    ViewData["Title"] = "Danh Sách Khóa Học";
}

<h1 class="text-center my-4">Danh Sách Khóa Học</h1>

<div class="container">
    <div class="row justify-content-center">
        @if (Model != null && Model.Any())
        {
            foreach (var course in Model)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-3">
                    <div class="card h-100 shadow-sm" style="font-size: 14px;">
                        <img src="@Url.Content(course.image)" class="card-img-top" alt="@course.title" style="height: 120px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column p-2">
                            <h6 class="card-title text-truncate">@course.title</h6>
                            <p class="card-text text-truncate">@course.description</p>
                            <a href="@Url.Action("Details", "Courses", new { idCourse = course.idCourse })" class="btn btn-primary btn-sm mt-auto">Chi Tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có khóa học nào.</p>
        }
    </div>
</div>
